@model PLANR.Models.Objective

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Objective</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObjectiveName)
        </dd>
        <dt class="col-sm-2">
            Metric
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetricName)
        </dd>
        <dt class="col-sm-2">
            Due Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObjectiveDueDate)
        </dd>
        <dt class="col-sm-2">
            Goal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Goal.GoalName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Objectiveid">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
