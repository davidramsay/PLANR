@model PLANR.Models.Objective

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Objective</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Objectiveid" />*@ 
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="ObjectiveName" class="form-control" />
                <span asp-validation-for="ObjectiveName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Goal</label>
                <select asp-for="Goalid" class="form-control" asp-items="ViewBag.Goalid"></select>
                <span asp-validation-for="Goalid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Metric</label>
                <input asp-for="MetricName" class="form-control" />
                <span asp-validation-for="MetricName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Due Date</label>
                <input asp-for="ObjectiveDueDate" type ="date" class="form-control" />
                <span asp-validation-for="ObjectiveDueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
